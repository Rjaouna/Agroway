 <script>
document.addEventListener('DOMContentLoaded', function () {

    const form = document.querySelector('.contact-card form');
    const submitBtn = form.querySelector('button'); 

    // CrÃ©ation du message
    const message = document.createElement('div');
    message.classList.add('alert', 'alert-warning', 'mt-4', 'text-center');
    message.style.display = "none";
    message.innerHTML = "Veuillez contacter <strong>We Digit All</strong> pour configurer votre formulaire de contact.";
    form.appendChild(message);

    form.addEventListener('submit', function(e) {
        e.preventDefault(); // ðŸ”¥ EmpÃªche l'envoi rÃ©el

        // DÃ©sactive le bouton
        submitBtn.disabled = true;
        submitBtn.innerText = "Envoi...";

        // Affiche le message
        message.style.display = "block";
        message.style.opacity = "0";
        setTimeout(() => { message.style.transition = "opacity .5s"; message.style.opacity = "1"; }, 2000);

        // RÃ©active le bouton aprÃ¨s 3 secondes
        setTimeout(() => {
            submitBtn.disabled = false;
            submitBtn.innerText = "Envoyer";

        }, 3000);
