 <script>
document.querySelectorAll('.category-card').forEach(card => {
    let timer;

    card.addEventListener('mouseenter', () => {

        // Chercher le bouton dans cette card
        const btn = card.querySelector('.btn');
        if (!btn) return;

        // D√©marre le timer 2 secondes
        timer = setTimeout(() => {
            btn.classList.add('btn-wiz');

            // Enl√®ve l‚Äôanimation apr√®s la fin pour pouvoir la rejouer
            setTimeout(() => {
                btn.classList.remove('btn-wiz');
}, 2100);


}, 1000);


    });

    // Si on quitte la card avant 2s : annuler le wiz
    card.addEventListener('mouseleave', () => {
        clearTimeout(timer);
    });
});
</script>

