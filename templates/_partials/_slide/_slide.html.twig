 <script>
document.addEventListener("DOMContentLoaded", () => {


    const animateFloat = (selector, amplitude = 20, speed = 3500, reverse = false) => {
        const elements = document.querySelectorAll(selector); // ⭐ toutes les images
        if (!elements.length) return;

        elements.forEach((el) => {
            el.animate(
                [
                    { transform: "translate(0, 0)" },
                    { transform: `translate(${reverse ? -amplitude : amplitude}px, ${amplitude}px)` },
                    { transform: "translate(0, 0)" }
                ],
                {
                    duration: speed,
                    iterations: Infinity,
                    easing: "ease-in-out"
                }
            );
        });
    };

    // ⭐ Anime les images de gauche
    animateFloat(".mini-img1", 25, 4200);
    animateFloat(".mini-img2", 30, 5000, true);

    // ⭐ Anime les images de droite
    animateFloat(".mini-img3", 35, 4600);
    animateFloat(".mini-img4", 28, 5400, true);

    // ⭐ Animation du bas (effet respiration)
    const bottoms = document.querySelectorAll(".mini-bottom .mini-img");
    bottoms.forEach((bottom) => {
        bottom.animate(
            [
                { transform: "scale(1)" },
                { transform: "scale(1.04)" },
                { transform: "scale(1)" }
            ],
            {
                duration: 5000,
                iterations: Infinity,
                easing: "ease-in-out"
            }
        );
    });

});
document.addEventListener("DOMContentLoaded", () => {

    const carousel = document.getElementById('carouselExampleDark');

    carousel.addEventListener('slid.bs.carousel', function (event) {

        // ⭐ Masquer toutes les mini-images
        const allMiniImages = document.querySelectorAll('.mini-images-wrapper img');
        allMiniImages.forEach(img => {
            img.classList.add('d-none');
            img.classList.remove('show', 'mini-appear');
        });

        // ⭐ Récupérer le slide actif
        const activeSlide = carousel.querySelector('.carousel-item.active');
        const activeImages = activeSlide.querySelectorAll('.mini-images-wrapper img');

        // ⭐ Réafficher les images UNE PAR UNE avec animation
        activeImages.forEach((img, index) => {

            img.classList.remove('d-none');            // montrer l'image
            img.classList.add('mini-appear');         // état de départ (opacity 0)

            setTimeout(() => {
                img.classList.add('show');            // animation finale
            }, index * 150); // ⏳ délai entre chaque image (250ms)
        });

    });

});


</script>

