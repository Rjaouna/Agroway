 <script>
document.addEventListener("DOMContentLoaded", () => {

    const animateFloat = (selector, amplitude = 20, speed = 3500, reverse = false) => {
        const el = document.querySelector(selector);
        if (!el) return;

        const loop = () => {
            el.animate(
                [
                    { transform: "translate(0, 0)" },
                    { transform: `translate(${reverse ? -amplitude : amplitude}px, ${amplitude}px)` },
                    { transform: "translate(0, 0)" }
                ],
                {
                    duration: speed,
                    iterations: Infinity,
                    easing: "ease-in-out"
                }
            );
        };

        loop();
    };

    // ⭐ Anime les images de gauche
    animateFloat(".mini-img1", 25, 4200);            // flottement léger
    animateFloat(".mini-img2", 30, 5000, true);     // mouvement inverse

    // ⭐ Anime les images de droite
    animateFloat(".mini-img3", 35, 4600);
    animateFloat(".mini-img4", 28, 5400, true);

    // ⭐ Animation du bas (effet respiration)
    const bottom = document.querySelector(".mini-bottom .mini-img");
    if (bottom) {
        bottom.animate(
            [
                { transform: "scale(1)" },
                { transform: "scale(1.04)" },
                { transform: "scale(1)" }
            ],
            {
                duration: 5000,
                iterations: Infinity,
                easing: "ease-in-out"
            }
        );
    }

});
</script>

