 <script>
	document.addEventListener("DOMContentLoaded", () => {

		/* ---------------------------------------------
		 FLOAT ANIMATION (réutilisable pour chaque slide)
		---------------------------------------------*/
		const animateFloat = (selector, amplitude = 20, speed = 3500, reverse = false) => {
			const elements = document.querySelectorAll(selector);
			elements.forEach(el => {
				el.animate(
					[{
							transform: "translate(0, 0)"
						},
						{
							transform: `translate(${reverse ? -amplitude : amplitude}px, ${amplitude}px)`
						},
						{
							transform: "translate(0, 0)"
						}
					], {
						duration: speed,
						iterations: Infinity,
						easing: "ease-in-out"
					}
				);
			});
		};

		/* SLIDE 1 animations */
		animateFloat(".slide1-img1", 25, 4200);
		animateFloat(".slide1-img2", 30, 5000, true);
		animateFloat(".slide1-img3", 35, 4600);
